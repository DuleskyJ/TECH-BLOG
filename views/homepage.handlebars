{{> header}}
<div class="container">
  <h2>All Posts</h2>
  {{#each posts}}
  <div class="post">
    <h3>{{this.title}}</h3>
    <p>{{this.content}}</p>
    <small>Posted by {{this.user.username}} on {{format_date this.created_at}}</small>
    <a href="/post/{{this.id}}">Read more</a>
  </div>
  {{/each}}
</div>
{{> footer}}