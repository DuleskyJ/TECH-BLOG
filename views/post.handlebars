{{> header}}
<div class="container">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <small>Posted by {{user.username}} on {{format_date created_at}}</small>
  <div class="comments">
    <h3>Comments</h3>
    {{#each comments}}
    <div class="comment">
      <p>{{this.comment_text}}</p>
      <small>Posted by {{this.user.username}} on {{format_date this.created_at}}</small>
    </div>
    {{/each}}
  </div>
  {{#if logged_in}}
  <form class="comment-form">
    <textarea id="comment-text" placeholder="Add a comment"></textarea>
    <button type="submit">Submit</button>
  </form>
  {{/if}}
</div>
{{> footer}}